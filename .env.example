# .env - Environment variables for Grade Insight app

# Application Settings
APP_NAME=Grade Insight
APP_VERSION=1.0.0
SECRET_KEY:"SUPER_SECRET_KEY"
JWT_SECRET_KEY:"SUPER_SECRET_KEY"

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database (sync, single instance)
DATABASE_URL=postgresql+psycopg2://gradeuser:gradepass@postgres:5432/gradeinsight

# Redis Configuration (optional, if you plan to use Redis)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.csv,.xlsx,.xls

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings (comma-separated, parse accordingly in your code)
ALLOW_ORIGINS=https://len.uiscan.com,http://len.uiscan.com,http://localhost:3000,http://localhost:8000
CORS_ENABLED=true

# Database Connection Pooling (tune as needed)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
